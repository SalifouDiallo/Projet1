{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0", // Version du modèle de paramètres
  "parameters": { // Paramètres de configuration pour personnaliser le déploiement
    "location": {
      "value": "canadacentral" // Région Azure pour déployer les ressources
    },
    "osDiskType": {
      "value": "Premium_LRS" // Type de disque OS (Premium pour de meilleures performances)
    },
    "addressPrefixes": {
      "value": [
        "10.0.0.0/16" // Plage d'adresses IP pour le réseau virtuel
      ]
    },
    "subnets": {
      "value": [
        {
          "name": "default", // Nom du sous-réseau
          "properties": {
            "addressPrefix": "10.0.0.0/20" // Plage d'adresses IP pour ce sous-réseau
          }
        }
      ]
    },
    "virtualNetworkId": {
      "value": "/subscriptions/0673c009-6d00-4254-9178-35fed48c87be/resourceGroups/Projet1/providers/Microsoft.Network/virtualNetworks/Projet1-vnet" // ID du réseau virtuel (VNet)
    },
    "virtualNetworkName": {
      "value": "Projet1-vnet" // Nom du réseau virtuel
    },
    "networkSecurityGroups": {
      "value": [
        {
          "name": "basicNsgProjet1-vnet-nic01", // Nom du groupe de sécurité réseau (NSG)
          "id": "/subscriptions/0673c009-6d00-4254-9178-35fed48c87be/resourceGroups/Projet1/providers/Microsoft.Network/networkSecurityGroups/basicNsgProjet1-vnet-nic01",
          "rules": [
            {
              "name": "Tcp", // Nom de la règle de sécurité
              "properties": {
                "priority": 300,
                "protocol": "Tcp",
                "access": "Allow",
                "direction": "Inbound",
                "sourceAddressPrefix": "*",
                "sourcePortRange": "*",
                "destinationAddressPrefix": "*",
                "destinationPortRange": "80" // Port de destination autorisé : 80
              }
            }
          ]
        }
      ]
    },
    "networkInterfaceConfigurations": {
      "value": [
        {
          "name": "Projet1-vnet-nic01", // Nom de la configuration d'interface réseau
          "primary": true,
          "subnetId": "/subscriptions/0673c009-6d00-4254-9178-35fed48c87be/resourceGroups/Projet1/providers/Microsoft.Network/virtualNetworks/Projet1-vnet/subnets/default",
          "applicationGatewayBackendAddressPools": [], // Pool d'adresses backend pour une gateway d'application (vide ici)
          "loadBalancerBackendAddressPools": [
            {
              "id": "[resourceId('Microsoft.Network/loadBalancers/backendAddressPools', parameters('loadBalancerName'), parameters('backendPoolName'))]"
            }
          ],
          "applicationSecurityGroups": [],
          "loadBalancerInboundNatPools": [],
          "enableAcceleratedNetworking": false,
          "nsgName": "basicNsgProjet1-vnet-nic01",
          "nsgId": "/subscriptions/0673c009-6d00-4254-9178-35fed48c87be/resourceGroups/Projet1/providers/Microsoft.Network/networkSecurityGroups/basicNsgProjet1-vnet-nic01",
          "pipName": "publicIp-Projet1-vnet-nic01" // Nom de l'adresse IP publique associée
        }
      ]
    },
    "backendPoolName": {
      "value": "bepool" // Nom du pool backend pour le Load Balancer
    },
    "loadBalancerName": {
      "value": "ALB" // Nom du Load Balancer
    },
    "loadbalancingRuleFrontEndPort": {
      "value": 80 // Port frontal pour la règle d'équilibrage de charge
    },
    "loadbalancingRuleBackendEndPort": {
      "value": 80 // Port backend pour la règle d'équilibrage de charge
    },
    "loadbalancingRuleProtocol": {
      "value": "Tcp" // Protocole pour la règle d'équilibrage (TCP)
    },
    "InboundNATRuleFrontEndPortRangeStart": {
      "value": 50000 // Début de la plage de ports NAT entrants
    },
    "vmName": {
      "value": "VMss1"
    },
    "virtualMachineScaleSetName": {
      "value": "VMss1"
    },
    "instanceCount": {
      "value": "2"
    },
    "instanceSize": {
      "value": "Standard_D2s_v3"
    },
    "platformFaultDomainCount": {
      "value": "1"
    },
    "scaleInPolicy": {
      "value": {
        "rules": [
          "Default"
        ],
        "forceDeletion": false // Suppression forcée désactivée
      }
    },
    "upgradePolicy": {
      "value": "Manual" // Politique de mise à niveau : manuelle
    },
    "hibernationEnabled": {
      "value": false
    },
    "adminUsername": {
      "value": "projet1"
    },
    "adminPassword": {
      "reference": {
        "keyVault": {
          "id": "/subscriptions/0673c009-6d00-4254-9178-35fed48c87be/resourceGroups/Projet1/providers/Microsoft.KeyVault/vaults/VaultProjet1" // ID du Key Vault pour stocker le mot de passe
        },
        "secretName": "codesecret" // Nom du secret contenant le mot de passe
      }
    },
    "customData": {
      "value": "echo 'Hello World' > /var/Log/startup. log" // Script personnalisé exécuté au démarrage
    },
    "securityType": {
      "value": "TrustedLaunch" // Type de sécurité (Trusted Launch pour sécurité accrue)
    },
    "secureBoot": {
      "value": true // Démarrage sécurisé activé
    },
    "vTPM": {
      "value": true // Module TPM virtuel activé
    },
    "healthExtensionProtocol": {
      "value": "http" // Protocole pour l'extension de vérification de santé (HTTP)
    },
    "healthExtensionPort": {
      "value": 80 // Port pour la vérification de santé
    },
    "healthExtensionRequestPath": {
      "value": "/" // Chemin de requête pour la vérification de santé
    },
    "autoRepairsPolicyEnabled": {
      "value": false // Réparations automatiques désactivées
    },
    "gracePeriod": {
      "value": "PT10M" // Période de grâce avant réparation automatique (désactivée ici)
    },
    "autoRepairsAction": {
      "value": "Replace" // Action de réparation automatique : remplacement (si activé)
    }
  }
}